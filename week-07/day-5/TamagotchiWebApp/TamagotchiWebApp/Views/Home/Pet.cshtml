<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="https://fonts.googleapis.com/css?family=Monoton|Press+Start+2P" rel="stylesheet">
    <title>Tamagotchi</title>
    <style>
        body {
            background-color: #ffffff;
        }

        a {
            align-content: inherit;
            display: inline;
        }

        * {
            font-family: 'Press Start 2P', cursive;
            color: #363636;
            text-align: center;
            list-style-position: inside;
            -webkit-font-smoothing: never;
            font-size: 15px;
            line-height: 2em;
        }

        img {
            align-content: center;
            display: inline-block;
            margin-left: auto;
            margin-right: auto;
            height: 20%;
            width: auto;
            border-radius: 25px;
        }

        h1 {
            font-size: 30px;
            font-family: 'Press Start 2P', cursive;
            line-height: 1em;
        }
    </style>
</head>
<body>

            <a href="/NutritionStore">Food Store</a>

    <h1>@Model.Pets.GetSelectedPet().Name</h1>
    <img src="@Model.Pets.GetSelectedPet().ImageURL" alt="Your Tamagotchi" />
    @*<p>Known tricks:</p>
    <ul>
        @foreach (var trick in Model.Pets.GetSelectedPet().Tricks)
        {
            <li>@trick</li>
        }
    </ul>*@
    <p>Food/Drinks owned:</p>
    <ul>
        @foreach (var food in Model.FoodAndDrinks.GetInventory())
        {
            <li>@food</li>
        }
    </ul>
</body>
</html>