<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="https://fonts.googleapis.com/css?family=Monoton|Press+Start+2P" rel="stylesheet">
    <title>Tamagotchi</title>
    <style>
        body {
            background-color: #ffffff;
        }

        a {
            align-content: inherit;
            display: inline;
        }

        * {
            font-family: 'Press Start 2P', cursive;
            color: #363636;
            text-align: center;
            list-style-position: inside;
            -webkit-font-smoothing: never;
            font-size: 15px;
            line-height: 2em;
        }

        img {
            align-content: center;
            display: inline-block;
            margin-left: auto;
            margin-right: auto;
            height: 20%;
            width: auto;
        }

        h1 {
            font-size: 30px;
            font-family: 'Press Start 2P', cursive;
            line-height: 1em;
        }
    </style>
</head>
<body>

    <a href="/NutritionStore">Food Store</a>
    <br />
    <h1>@Model.Pets.GetSelectedPet().Name</h1>
    <img id="image" src="@Model.Pets.GetSelectedPet().ImageURL" alt="Your Tamagotchi" />
    @*<p>Known tricks:</p>
        <ul>
            @foreach (var trick in Model.Pets.GetSelectedPet().Tricks)
            {
                <li>@trick</li>
            }
        </ul>*@
    @*<form action="PerformTrick" method="get"></form>
        <input type="button" name="trick" value="fly" />*@
    <p>Food/Drinks owned:</p>
    <ul>
        @foreach (var food in Model.Pets.GetSelectedPet().GetInventory())
        {
            <li>@food</li>
        }
    </ul>
    <br />
    <a id="back" href="/Login">Back to Login</a>

</body>
</html>