<%= render 'shared/navbar'%>
<%= render 'admin_navbar'%>

<h4>Add New Project:</h4>

<%= form_with scope: :project, url: projects_path, local: true do |form| %>
  <p>
    <%= form.label :thumbnail_url %><br>
    <%= form.text_field :thumbnail_url %>
  </p>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>